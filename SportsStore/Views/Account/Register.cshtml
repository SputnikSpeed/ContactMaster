@model SportsStore.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrieren";
}

<div class="bs-example bs-example-standalone" data-example-id="dismissible-alert-js">
    <div class="alert alert-warning alert-dismissible fade in" role="alert">
        <button class="close" aria-label="Close" type="button" data-dismiss="alert"><span aria-hidden="true">×</span></button>
        <strong>Wir sind im Aufbau!</strong> Jetzt kostenlos registrieren und ausprobieren!
    </div>

</div>
<div class="container">
        <br /><br /><br />
        <h2>@ViewBag.Title.</h2>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Neues Konto erstellen.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            
            <p>Mit der Registrierung akzeptiere ich die Datenschtutzbestimmungen und die AGB´s</p>
           @* <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Registrieren" />
        </div>
    </div>*@

    <!-- Button trigger modal -->
    <div class="col-md-offset-2 col-md-10">
        <button type="button" class="btn btn-default " data-toggle="modal" data-target="#myModal">
            Registrieren
        </button></div>

        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Registrierung</h4>
                    </div>
                    <div class="modal-body">
                        Der Contact-Master befindet sich momentan im Aufbau. <br />Wir versuchen für Sie die beste Lösung zur Verknüpfung Ihrer Kontakte zu gestalten.<br />
                        Der Testbetrieb geht mindestens bis 30.08.2015. Ihre Daten bleiben natürlich bei Bedarf auch nach dem Testbetrieb für Sie erhalten.<br />
                        Gerne nehmen wir Wünsche und Anregunge von Ihnen entgegen, schreiben Sie uns eine E-Mail an: <br />info@topp-consult.net <br />
                        Viel Erfolg mit dem Contact-Master!
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <button type="submit" class="btn btn-default" value="Registrieren">Registrieren</button>
                       </div>
                       
                    </div>
                </div>
            </div>
        </div>



        }
    </div>


<br /><br />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
